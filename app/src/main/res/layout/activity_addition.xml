<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackGround">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackGround"
        android:layout_margin="20dp"
        android:id="@+id/plusLayout">
    <TextView
        android:id="@+id/foodName"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="음식 이름: "
        android:textSize="20dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"/>
    <EditText
        android:id="@+id/editName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/foodName"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/limit"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="유통기한: "
        android:textSize="20dp"
        android:layout_below="@+id/editName"/>
    <EditText
        android:id="@+id/editLimit"
        android:hint="2020-05-05"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/limit"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/entity"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="음식 양: "
        android:textSize="20dp"
        android:layout_below="@+id/editLimit"/>
    <EditText
        android:id="@+id/editEntity"
        android:hint="2개"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/entity"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/position"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="저장 위치: "
        android:textSize="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/editEntity"/>
    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_toRightOf="@+id/position"
        android:layout_below="@+id/editEntity">
        <RadioButton
            android:id="@+id/refrigerator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="냉장"
            android:textSize="20dp"
            android:layout_marginRight="20dp"/>
        <RadioButton
            android:id="@+id/freezer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="냉동"
            android:textSize="20dp"/>
    </RadioGroup>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/additionButtonPanel"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true">

        <Button
            android:id="@+id/finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="완료"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/cancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="취소"
            android:textSize="20dp"/>

    </LinearLayout>
    </RelativeLayout>
</RelativeLayout>